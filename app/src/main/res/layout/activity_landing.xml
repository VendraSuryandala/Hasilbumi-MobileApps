<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgputih"
    tools:context=".ActivityLanding">


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:autoStart="true"
        android:flipInterval="4000">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/slider1"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/slider2"></ImageView>

    </ViewFlipper>


    <!-- Footer -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="215dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_logo1" />

        <TextView
            android:id="@+id/textlogo1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Free Shipping"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/logo1"
            android:src="@mipmap/ic_logo2" />

        <TextView
            android:id="@+id/textlogo2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="always fresh"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/logo3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/logo2"
            android:src="@mipmap/ic_logo3" />

        <TextView
            android:id="@+id/textlogo3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="206dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="superior quality"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/logo3"
            android:src="@mipmap/ic_logo4" />

        <TextView
            android:id="@+id/textlogo4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="support"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- content -->
    <RelativeLayout
        android:id="@+id/produkline"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/background">


        <!-- Column 1 -->
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bgputih">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/produk"></ImageView>

            <Button
                android:id="@+id/menu_produk"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background"
                android:text="PRODUK"
                android:textSize="10dp"
                app:backgroundTint="#82AE46"></Button>
        </RelativeLayout>


        <!-- Column 2 -->
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bgputih">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/keranjang_menu"></ImageView>

            <Button
                android:id="@+id/menu_keranjang"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background"
                android:text="keranjang"
                android:textSize="10dp"
                app:backgroundTint="#82AE46"></Button>


        </RelativeLayout>

        <!-- Column 3 -->
        <RelativeLayout
            android:layout_width="115dp"
            android:layout_height="230dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bgputih">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/tentang"></ImageView>

            <Button
                android:id="@+id/menu_tentang"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background"
                android:text="Profil"
                android:textSize="9dp"
                app:backgroundTint="#82AE46"></Button>


        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/textnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="#fff"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:text="id"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp">

        <TextView
            android:id="@+id/Copyright"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Copyright Â© 2022 All right Reserved | Repost by hasilbumi.id "
            android:textColor="#000000"
            android:textSize="9dp"
            android:textStyle="bold" />

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnlogout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_logout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Keluar"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textStyle="bold" />

        </RelativeLayout>



</RelativeLayout>