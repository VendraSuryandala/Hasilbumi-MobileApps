<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="horizontal"
    android:background="@drawable/bgwhite"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    tools:context=".data_produk">

    <TextView
        android:id="@+id/idproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:text="1"
        tools:ignore="RtlCompat" />

<!--    <TextView-->
<!--        android:id="@+id/Fotoproduk"-->
<!--        android:layout_width="130dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginTop="6dp"-->
<!--        android:layout_marginRight="20dp"-->
<!--        android:gravity="center"-->
<!--        android:text="3"-->
<!--        tools:ignore="RtlCompat" />-->

    <TextView
        android:id="@+id/berat"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="4"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/fotoproduk"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_plus" />

    <TextView
        android:id="@+id/namaproduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fotoproduk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Nama Produk"
        android:textColor="#82ae69"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txstok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaproduk"
        android:layout_marginStart="130dp"
        android:layout_marginTop="5dp"
        android:text="Stok :"
        android:textColor="#82ae69" />

    <TextView
        android:id="@+id/stok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaproduk"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/txstok"
        android:text="Stok" />

    <TextView
        android:id="@+id/satuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaproduk"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/stok"
        android:text="Satuan" />

    <TextView
        android:id="@+id/harga_jual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaproduk"
        android:layout_marginStart="190dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>